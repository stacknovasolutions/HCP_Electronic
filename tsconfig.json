{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noImplicitAny": true
  },
  "lib": ["es2015"],
  "include": ["src/**/*"],
  "exclude": ["admin", "widget", "**/*.spec.ts"]
}
